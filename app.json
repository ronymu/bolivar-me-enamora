{
  "expo": {
    "name": "bolivar-me-enamora",
    "slug": "bolivar-me-enamora",
    "scheme": "bolivar-me-enamora",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Necesitamos acceso a tu galería para que puedas seleccionar y subir una foto de perfil.",
        "NSCameraUsageDescription": "Necesitamos acceso a tu cámara para que puedas tomar y subir una foto de perfil.",
        "NSLocationWhenInUseUsageDescription": "Necesitamos tu ubicación para mostrarte eventos cercanos y ayudarte a navegar hacia ellos."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-asset",
      "expo-secure-store"
    ],
    "extra": {
      "EVENTS_SOURCE": "api",
      "API_BASE_URL": ""
    }
  }
}
